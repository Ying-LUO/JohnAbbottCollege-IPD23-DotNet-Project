<UserControl x:Class="SimpleJiraProject.SprintStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleJiraProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox Name="cmbStat"  VerticalContentAlignment="Center" Padding="10,10,5,15"
              Width="85">
            <Border BorderThickness="0 0 1.2 1.2" CornerRadius="20" BorderBrush="Black" />
            <ComboBoxItem Name="planning" Selected="planning_Selected" Background="#FFEAEAEA" Padding="10"
                Content="Planning"  />
            <ComboBoxItem Name="ongoing" Selected="ongoing_Selected" Background="#FF4CAFE8" Padding="10"
                Content="Ongoing" />
            <ComboBoxItem Name="released" Selected="released_Selected" Background="#FF47D6A2" Padding="10"
                Content="Released" />
        </ComboBox>

    </Grid>
</UserControl>

    
