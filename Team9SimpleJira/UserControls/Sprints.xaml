        <ListView x:Name="lvSprints" Width="auto" Background="{x:Null}" BorderBrush="{x:Null}" Margin="34,78,26,75" Grid.Row="1" SelectionChanged="lvSprints_SelectionChanged">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
