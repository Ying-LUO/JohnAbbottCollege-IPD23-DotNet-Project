                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Description" Width="350" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Start Date" Width="150" DisplayMemberBinding="{Binding Date1, StringFormat=d}" />
                    <GridViewColumn Header="Release Date" Width="150" DisplayMemberBinding="{Binding Date2, StringFormat=d}" />
                    <GridViewColumn Header="Status" Width="auto" DisplayMemberBinding="{Binding Status}" />

                </GridView>
            </ListView.View>
